<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/swipe_left_right"
        android:textAlignment="center"
        android:textColor="@color/grey2"
        android:textSize="@dimen/letter_huge"
        app:layout_constraintBottom_toTopOf="@id/sound_line_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <prieto.fernando.soundline.SoundLineView
        android:id="@+id/sound_line_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:wave_first_src="@drawable/custom_first_default_0"
        app:wave_second_src="@drawable/custom_second_default_0" />
</androidx.constraintlayout.widget.ConstraintLayout>